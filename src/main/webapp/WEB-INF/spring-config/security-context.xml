<?xml version="1.0" encoding="UTF-8"?>
<b:beans xmlns="http://www.springframework.org/schema/security"
         xmlns:b="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
                  http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security.xsd">

    <http>
        <!-- 사용자 지정 로그인폼 페이지 요청주소 및 로그인 성공시, 실패시 요청 주소 지정 -->
        <form-login login-page="/loginform.it"
                    authentication-failure-url="/loginfail.it" />
        <!-- 로그아웃 요청주소 지정 -->
        <logout logout-success-url="/logoutform.it" />
        <!-- 로그인 세션을 가진 사용자만 접근 가능한 요청주소 지정 -->
        <intercept-url pattern="/loginsuccess.it" access="ROLE_USER, ROLE_COMPANY, ROLE_ADMIN" />
        <intercept-url pattern="/loginsuccessU.it" access="ROLE_USER" />
        <intercept-url pattern="/loginsuccessC.it" access="ROLE_COMPANY" />
        <intercept-url pattern="/loginsuccessA.it" access="ROLE_ADMIN" />
    </http>

    <authentication-manager>
        <authentication-provider>
            <!--<user-service>-->
            <!-- 로그인 사용자 계정 및 권한(ROLE_ADMIN) 지정 -->
            <!--<user name="admin" password="1234" authorities="ROLE_ADMIN" />-->
            <!--<user name="user" password="0000" authorities="ROLE_USER" />-->
            <!--</user-service>-->

            <jdbc-user-service data-source-ref="dataSource"
                               users-by-username-query="SELECT u_id userName, u_pw userpw, enabled
					FROM Huser WHERE u_id=?"
                               authorities-by-username-query="SELECT u_id userName, u_auth authority
					FROM Huser WHERE u_id=?" />
        </authentication-provider>

        <authentication-provider>
            <jdbc-user-service data-source-ref="dataSource"
                               users-by-username-query="SELECT c_id userName, c_pw userpw, enabled
					FROM COMPANY WHERE c_id=?"
                               authorities-by-username-query="SELECT c_id userName, c_auth authority
					FROM COMPANY WHERE c_id=?" />
        </authentication-provider>

        <authentication-provider>
            <jdbc-user-service data-source-ref="dataSource"
                               users-by-username-query="SELECT a_id userName, a_pw userpw, enabled
					FROM HAdmin WHERE a_id=?"
                               authorities-by-username-query="SELECT a_id userName, a_auth authority
					FROM HAdmin WHERE a_id=?" />
        </authentication-provider>
    </authentication-manager>
</b:beans>